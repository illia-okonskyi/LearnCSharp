@model CodeFirst.Models.Product

<input name="old.Supplier.Id" value="@Model.Supplier?.Id" type="hidden" />
<input name="old.Supplier.Name" value="@Model.Supplier?.Name" type="hidden" />
<input name="old.Supplier.City" value="@Model.Supplier?.City" type="hidden" />
<input name="old.Supplier.State" value="@Model.Supplier?.State" type="hidden" />

<input type="hidden" asp-for="Supplier.Id" />
<div class="form-group">
    <label asp-for="Supplier.Name"></label>
    <input asp-for="Supplier.Name" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Supplier.City"></label>
    <input asp-for="Supplier.City" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Supplier.State"></label>
    <input asp-for="Supplier.State" class="form-control" />
</div>