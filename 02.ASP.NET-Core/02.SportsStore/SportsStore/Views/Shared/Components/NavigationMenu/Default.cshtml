@model IEnumerable<string>

<a class="btn btn-block btn-secondary"
   asp-action="List"
   asp-controller="Product"
   asp-route-category=""
   asp-route-productPage="1">
    Home
</a>

@foreach (string category in Model)
{
    var targetClass = category == ViewBag.SelectedCategory ? "btn-primary" : "btn-secondary";
    <a class="btn btn-block @targetClass"
       asp-action="List"
       asp-controller="Product"
       asp-route-category="@category"
       asp-route-productPage="1">
        @category
    </a>
}